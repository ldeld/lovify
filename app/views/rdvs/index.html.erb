<div class="main">
  <h2>Hi, <%= @user.first_name %>!</h2>
  <div class="tab-container">
      <div class="tab-bar">
        <a href="#Requests" class="tab is-active" data-tab="tab-1">Requests</a>
        <a href="#Matches" class="tab" data-tab="tab-2">Matches</a>
      </div>
    </div>
    <div class="tab-content is-active" id="tab-1">
      <!-- <div class="col-xs-12 col-sm-10 col-sm-offset-1"> -->
      <ul class="inbox">
      <% @rdvs_requests.each do |rdv_request| %>
        <li class="message">
          <%= profile_picture_for(User.find(rdv_request.asker), height: 80, width: 80, class: "avatar") %>
          <div class="message-name">
            <h3><%= User.find(rdv_request.asker).first_name %></h3>
            <h3><%= link_to "See match", "/matches/:id" %></h3>
          </div>
          <div class="message-status">
            <%= link_to "Accept Date", accept_rdv_path(rdv_request), class: "btn btn-primary" %>
          </div>
        </li>
      <% end %>
    </ul>
    </div>


    <div class="tab-content" id="tab-2">
       <!--  <div class="col-xs-12 col-sm-10 col-sm-offset-1"> -->
      <ul class="inbox">
      <% @rdvs_done.each do |rdv_done| %>
        <li class="message">
          <% if rdv_done.asker == @user.id %>
            <%= profile_picture_for(User.find(rdv_done.receiver), height: 80, width: 80, class: "avatar") %>
          <div class="message-name">
            <h3><%= User.find(rdv_done.receiver).first_name %></h3>
          </div>


          <% else %>

            <%= profile_picture_for(User.find(rdv_done.asker), height: 80, width: 80, class: "avatar") %>

          <div class="message-name">
            <h3><%= User.find(rdv_done.asker).first_name %></h3>
          </div>

          <% end %>


          <div class="message-status">
            <%= link_to "Send a message", conversation_message_path(rdv_done.conversation) %>
          </div>
        </li>
      <% end %>
    </ul>
    </div>
  </div>
</div>



