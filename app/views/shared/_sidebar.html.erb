      <li><%= link_to "Start matching", "/next-match", class: "sidebar-link" %></li>
        <div class="border-light"></div>
      <li><%= link_to "Messages", conversations_path, class: "sidebar-link" %> (<%= unread_messages_count %>)</li>
        <div class="border-light"></div>
      <li><%= link_to "Dates", rdvs_path, class: "sidebar-link" %></li>
      <div class="border-light"></div>
      <li>
        <div class="sidebar-link"><%= link_to destroy_user_session_path, method: :delete do %>
      <%= t(".sign_out", default: "Log out") %>
      <% end %></div></li>
