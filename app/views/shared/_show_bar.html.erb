
  <div class="display-bar">
    <div style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.7) 50%), url('<%= cl_image_path @bar.photo %>'); background-size: cover;">
      <h2><%= @bar.name %></h2>
      <h3><%= @bar.address %></h3>
    </div>
    <div class="info-bar">
      <p>
        <%= @bar.description %>
      </p>
      <%= render partial: 'bars/show', locals: {bar: @bar, map_id: 1} %>
    </div>
  </div>


