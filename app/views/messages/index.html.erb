<div class="main">
  <% if @over_ten %>
     <%= link_to 'Show Previous', '?m=all' %>
  <% end %>

  <div class="ui segment" id="message-list">
    <% if @messages.first.id.nil? %>
      <p>There are no messages between you yet. Don't be shy, say hello!</p>
    <% end %>
    <% @messages.each do |message| %>
      <% if message.body %>
        <% user = User.find(message.user_id) %>
        <div class="item">
          <div class="content">
            <div class="header"><%= user.first_name %></div>
            <div class="list">
              <div class="item">
                <p>   > <%= message.body %> </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= render 'form', conversation: @conversation, message: @message %>
</div>
